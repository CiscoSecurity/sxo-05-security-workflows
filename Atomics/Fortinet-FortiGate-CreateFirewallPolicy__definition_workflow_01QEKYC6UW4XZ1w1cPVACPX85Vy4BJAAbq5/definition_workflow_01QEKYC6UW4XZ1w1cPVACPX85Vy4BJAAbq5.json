      {
        "unique_name": "definition_activity_01QEKYCH9J7897TdyVLlYEuYw48m8HDUzmP",
        "name": "Execute Python Script",
        "title": "Create policy JSON",
        "type": "python3.script",
        "base_type": "activity",
        "properties": {
          "action_timeout": 180,
          "continue_on_failure": false,
          "display_name": "Create policy JSON",
          "script": "import json\nimport sys\nurl_filter_name = sys.argv[1]\nsource_addr = sys.argv[2]\ndestination_addr = sys.argv[3]\nincoming_interface = sys.argv[4]\noutgoing_interface = sys.argv[5]\naction = sys.argv[6]\npolicy_name = sys.argv[7]\npolicy_json = {\n    \"name\": policy_name,\n    \"srcintf\": [\n        {\"name\": incoming_interface or \"any\"}\n    ],\n    \"dstintf\": [\n        {\"name\": outgoing_interface or \"any\"}\n    ],\n    \"srcaddr\": [\n        {\"name\": source_addr or \"all\"}\n    ],\n    \"dstaddr\": [\n        {\"name\": destination_addr or \"all\"}\n    ],\n    \"action\": action.lower(),\n    \"schedule\": {\"q_origin_key\": \"always\"},\n    \"utm-status\": \"enable\",\n    \"service\": [\n        {\"name\": \"ALL\"}\n    ],\n}\nif url_filter_name:\n    policy_json[\"webfilter-profile\"] = {\n        \"q_origin_key\": url_filter_name\n    }\n    policy_json[\"ssl-ssh-profile\"] = {\n        \"q_origin_key\": \"certificate-inspection\"\n    }\npolicy_json = json.dumps(policy_json)",
          "script_arguments": [
            "$workflow.definition_workflow_01QEKYC6UW4XZ1w1cPVACPX85Vy4BJAAbq5.input.variable_workflow_01QEKYC6NLUY01wNt1j7ZE7dX5FRo7AHclU$",
